@model CDigital.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<header>
    <nav class="painelAdmin">
        <h3>Cardápio Digital ADMIN - Deletar</h3>
        
    </nav>
</header>


<div class="deleteData">
    <p>Você tem certeza que deseja deletar este produto?</p><br />
    <div class="deleteInfo">

        <dl class="row">
            <dt class="col-sm-2">
                Nome:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Preço:
            </dt>
            <dd class="col-sm-10">
                R$ @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Descrição:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete" class="optionsDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" type="submit" value="Delete" class="btn btn-primary">Voltar</a>
    </form>
</div>
